{
	"compilerOptions": {
		"jsx": "react",
		"lib": ["es6", "dom"],
		"rootDir": "src",
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"sourceMap": true,
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowJs": true
	},
	"include": ["src/**/*.ts*", "src/index.tsx"],
	"exclude": ["node_modules", "dist", "lib", "build"]
}
